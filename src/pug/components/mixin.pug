mixin menu (items) 
    for item in items 
        li
            a(href=item.url) #{item.name} 

mixin card (item)
    figure.price-card
        figcaption 
            picture 
                sourse(srcset=item.src + ".webp", type="image/webp")
                img(src=item.src + ".png", alt=item.alt)
            p.in #{item.in} 
            p.price #{item.price}<span>/грн*</span>
            p.card-descr #{item.description}
            



                                      